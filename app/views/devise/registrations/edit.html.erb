<h2><%= t('.title_edit') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %><%= t('.minimum_characters') %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i><%= t('.input_current_password') %></i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label :profile_text %><br />
    <%= f.text_area :profile_text, autofocus: true, autocomplete: "profile_text", size: "50x10" %>
  </div>

  <div class="field">
    <%= f.label :post_number %><br />
    <%= f.text_field :post_number, autofocus: true, autocomplete: "post_number" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, autofocus: true, autocomplete: "address", size: "50x10" %>
  </div>



  <div class="actions">
    <%= f.submit t('.update_account') %>
  </div>
<% end %>

<div><%= button_to t('.delete_account'), registration_path(resource_name), data: { confirm: t('.delete_confirm', name: current_user.name, email: current_user.email), turbo_confirm: t('.delete_confirm', name: current_user.name, email: current_user.email) }, method: :delete %></div>

<%= link_to t('.back_to_users'), :users %>
