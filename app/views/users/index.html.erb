<h1><%= t('views.common.title_index', name: (User.model_name.human)) %></h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to t('views.common.show', name: User.model_name.human.downcase), user_path(user) %>
    </p>
  <% end %>
  <%= paginate @users %>
</div>
