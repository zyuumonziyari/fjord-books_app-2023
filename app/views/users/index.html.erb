<h1><%= t('views.common.title_index', name: User.model_name.human) %></h1>

<div id="users" class="index-items">
  <% @users.each do |user| %>
    <div class="index-item">
      <%= render user,user: @users %>
      <p>
        <%= link_to t('views.common.show', name: User.model_name.human), user %>
      </p>
    </div>
  <% end %>
</div>

<%= paginate @users %>
