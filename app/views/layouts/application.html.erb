<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= params[:action] %>">

  <p class="navbar-text float-right">
  <% if user_signed_in? %>
  <%= t('navbar.logged_in_as') %> <%= current_user.email %> |
  <%= link_to t('navbar.edit_profile'), edit_user_registration_path, class: "navbar-link" %> |
    <%= link_to t('navbar.logout'), destroy_user_session_path, data: { turbo_method: :delete }, class: "navbar-link" %>
  <% else %>
    <%= link_to t('navbar.sign_up'), new_user_registration_path, class: "navbar-link" %> |
    <%= link_to t('navbar.login'), new_user_session_path, class: "navbar-link" %>
  <% end %>
  </p>
  <% if notice %>
    <p class="alert alert-success"><%= t('alerts.success') + notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= t('alerts.danger') + alert %></p>
  <% end %>
  <%= yield %>
  </body>
</html>
