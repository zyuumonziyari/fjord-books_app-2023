<div id="<%= dom_id message %>">
  <p>
    <strong><%= User.model_name.human %>:</strong>
    <% if message.user.name? %>
      <%= message.user.name %>
    <% else %>
      <%= message.user.email %>
    <% end %>
  </p>
  <p>
    <strong><%= Message.human_attribute_name(:content) %>:</strong>
    <%= message.content %>
  </p>
  <p>
    <strong><%= Message.human_attribute_name(:created_at) %>:</strong>
    <%= message.created_at.strftime('%Y/%m/%d - %H:%M') %>
  </p>
</div>
